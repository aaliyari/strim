# This file is part of strim (http://github.com/standage/strim) and is
# licensed under the BSD 3-clause license: see LICENSE.txt.
# -----------------------------------------------------------------------------

set -euo pipefail

print_usage()
{
  cat <<EOF
Usage: strim [options] /path/to/trimmomatic.jar TRIMSTEP1 [TRIMSTEP2 ...]
  Options:
    -h         print this help message and exit
    -l FQ      left/1 paired input file
    -r FQ      right/2 paired input file
    -i FQ      interleaved paired input file
    -3         specify phred + 33 Fastq quality encoding
    -t N       specify number of threads to use; default is 1
    -g FILE    record a log of all read trimming
EOF
}

pairin1=""
pairin2=""
pairin=""
phred33=NO
numthreads=1
logfile=""

if [ "$#" -eq 0 ]; then
    print_usage
    exit 0
fi

while getopts "hl:r:i:3t:g:" key
do
    case $key in
        h)
            print_usage
            exit 0
        ;;
        l)
            pairin1=$OPTARG
        ;;
        r)
            pairin2=$OPTARG
        ;;
        i)
            pairin=$OPTARG
        ;;
        3)
            phred33=YES
        ;;
        t)
            numthreads=$OPTARG
        ;;
        g)
            logfile=$OPTARG
        ;;
    esac
done
shift $((OPTIND-1))

if [ "$#" -eq 0 ]; then
    >&2 echo "Trimmomatic JAR file not specified!"
    exit 1
fi
trimjar=$1
shift

if [ "$#" -eq 0 ]; then
    >&2 echo "No trim steps specified!"
    exit 1
fi


tempdir=$(mktemp -dt "strim.XXXXXXXXXX")

cmd="java -jar $trimjar PE -threads $numthreads"
if [ "$phred33" = "YES" ]; then
    cmd="$cmd -phred33"
fi
if [ -n "$logfile" ]; then
    cmd="$cmd -trimlog $logfile"
fi
cmd="$cmd $pairin1 $pairin2 ${tempdir}/out1 /dev/null ${tempdir}/out2 /dev/null $@"

# >&2 echo $cmd

mkfifo ${tempdir}/out1
mkfifo ${tempdir}/out2
$cmd &
paste <(paste - - - - < ${tempdir}/out1) <(paste - - - - < ${tempdir}/out2) | tr '\t' '\n'
wait

rm -r $tempdir

